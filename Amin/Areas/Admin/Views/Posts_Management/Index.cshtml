@model IEnumerable<Amin.Data.Post>

@{
    ViewData["Title"] = "Quản lý user";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Posts Management</h1>

<p>
    <a class="btn btn-info" asp-action="Create" class="alert-heading">Create New Post</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuthorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostImageId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostImageData)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostImageId)
            </td>
            <td>
                @if (item.PostImageData != null)
                {
                    <img src="data:image/jpg;base64,@item.PostImageData" alt="Post Image" width="100" height="100" />
                }
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.PostId">Edit</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.PostId">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.PostId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
