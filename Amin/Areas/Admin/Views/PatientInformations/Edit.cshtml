@model Amin.Data.PatientInformation

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Edit Patient Information</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RecordId" />
            <div class="form-group">
                <label asp-for="UserId" class="control-label">User</label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" type="date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SleepTime" class="control-label"></label>
                <input asp-for="SleepTime" type="time" class="form-control" />
                <span asp-validation-for="SleepTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WakeTime" class="control-label"></label>
                <input asp-for="WakeTime" type="time" class="form-control " />
                <span asp-validation-for="WakeTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhysicalActivityDuration" class="control-label"></label>
                <input asp-for="PhysicalActivityDuration" class="form-control"  />
                <span asp-validation-for="PhysicalActivityDuration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CaffeineIntake" class="control-label"></label>
                <input asp-for="CaffeineIntake" class="form-control" />
                <span asp-validation-for="CaffeineIntake" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
