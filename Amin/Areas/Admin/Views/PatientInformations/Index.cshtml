@model IEnumerable<Amin.Data.PatientInformation>

@{
    ViewData["Title"] = "Users Management";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Patient Management</h1>

<p>
    <a class="btn btn-info" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SleepTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WakeTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhysicalActivityDuration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CaffeineIntake)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SleepTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WakeTime)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhysicalActivityDuration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CaffeineIntake)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.RecordId">Edit</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.RecordId">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.RecordId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
