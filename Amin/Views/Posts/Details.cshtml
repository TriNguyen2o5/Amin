@model Amin.Data.Post

@{
    ViewData["Title"] = "Post Details";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="container mt-4">
    <!-- Tiêu đề bài viết -->
    <h1 class="text-center">@Html.DisplayFor(model => model.Title)</h1>

    <!-- Hiển thị nội dung bài viết -->
    <div class="card mb-4">
        <div class="card-body">
            <h4 class="card-title">Content</h4>
            <p class="card-text">@Html.DisplayFor(model => model.Content)</p>
        </div>
    </div>

    <!-- Thông tin tác giả -->
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Author</h5>
            <p class="card-text">@Html.DisplayFor(model => model.AuthorName)</p>
        </div>
    </div>

    <!-- Nút quay lại trang chủ -->
    <div class="mt-4">
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Back to Home</a>
    </div>
</div>
