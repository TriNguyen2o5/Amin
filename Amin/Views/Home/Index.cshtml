@model IEnumerable<Amin.Data.Post>

<div class="container">
    <h2>Medical Articles </h2>
    <div class="row">
        @foreach (var post in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@post.Title</h5>
                        <p class="card-text">
                            @(post.Content.Length > 100 ? post.Content.Substring(0, 100) + "..." : post.Content)
                        </p>
                        <a href="@Url.Action("Details", "Posts", new { id = post.PostId })" class="btn btn-primary">Read More</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>